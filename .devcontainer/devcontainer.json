{
  "name": "Python 3.12.1 Dev Container with Docker",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12.1"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:1": {}
  },
  "postCreateCommand": "python -m venv venv && . venv/bin/activate && pip install -r requirements.txt || true",
  "forwardPorts": [8000],
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance", "ms-azuretools.vscode-docker"]
    }
  }
}
